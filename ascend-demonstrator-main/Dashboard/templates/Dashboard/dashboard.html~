<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<script type="text/javascript" >

$(function () {

      var $partChart = $("#part-chart");
      $.ajax({
        url: $partChart.data("url"),
        success: function (data) {

          var ctx = $partChart[0].getContext("2d");
          
          new Chart(ctx, {
            type: 'bar',
            data: {
              labels: data.labels,
              datasets: [{
                label: 'Project',
                backgroundColor: 'blue',
                data: data.data
              }]          
            },
            options: {
            	scales: {
						yAxes	 : [{
							ticks : {
								min : 0,					
							}, 
							
							scaleLabel:{
								display:true,
								labelString:'Number of Part',
							}
						}], 
						
						xAxes : [{
							scaleLabel:{
								display:true,
								labelString:'Project Names'							
							},
						}],   
              },
              
              responsive: true,
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Project Part Bar Chart'
              }
            }
          });

        }
      });

    });

$(function () {

      var $subChart = $("#sub-chart");
      $.ajax({
        url: $subChart.data("url"),
        success: function (data) {

          var ctx = $subChart[0].getContext("2d");
			console.log(data.data);
        	console.log(data.labels);
          new Chart(ctx, {
            type: 'bar',
            data: {
              labels: data.labels,
              datasets: [{
                label: 'Sub Process Cycle Chart',
                backgroundColor: 'green',
                data: data.data
              }]          
            },
            options: {
            	scales: {
						yAxes	 : [{
							scaleLabel:{
								display: true,
								labelString: 'Days'
							},
							
							ticks : {
								min : 0,					
							}
						}],
						
						xAxes : [{
							scaleLabel:{
								display:true,
								labelString:'Sub Process'							
							},
						}],
              },
              
              responsive: true,
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Sub Process Cycle Bar Chart'
              }
            }
          });

        }
      });

    });


$(function () {

      var $subPowerChart = $("#sub-power-chart");
      $.ajax({
        url: $subPowerChart.data("url"),
        success: function (data) {

          var ctx = $subPowerChart[0].getContext("2d");
			console.log(data.data);
        	console.log(data.labels);
          new Chart(ctx, {
            type: 'bar',
            data: {
              labels: data.labels,
              datasets: [{
                label: 'Sub Process Cycle Chart',
                backgroundColor: 'green',
                data: data.data
              }]          
            },
            options: {
            	scales: {
						yAxes	 : [{
							scaleLabel:{
								display: true,
								labelString: 'Days'
							},
							
							ticks : {
								min : 0,					
							}
						}],
						
						xAxes : [{
							scaleLabel:{
								display:true,
								labelString:'Sub Process'							
							},
						}],
              },
              
              responsive: true,
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Sub Process Cycle Bar Chart'
              }
            }
          });

        }
      });

    });
    
    

const data = {
  labels: [
    'Process Time',
    'Interface Time',
    'Labour Time'
  ],
  datasets: [{
    label: 'My First Dataset',
    data: [{{processTimeFrac}}, {{interfaceTimeFrac}}, {{totalLabourTimeFrac}}],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(255, 205, 86)'
    ],
    hoverOffset: 4
  }]
};

const config = {
  type: 'doughnut',
  data: data,
};

 window.onload = function() {
   var ctx = document.getElementById('pie-chart').getContext('2d');
   window.myPie = new Chart(ctx, config);
 };


</script>
